<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tilaus Application</title>

    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <!--Lisää nämä, jotta pudotusvalikko toimii!-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">TilausDB (@ViewBag.LoggedStatus)</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" style="float:right" href="~/Home">Home<span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Home/Login">Login (@Session["UserName"]) <span class="sr-only">(IN)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Home/Logout">Logout<span class="sr-only">(OUT)</span></a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Company</a>
                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 42px, 0px);">
                            <a class="dropdown-item" href="~/Home/About">About</a>
                            <a class="dropdown-item" href="~/Home/Contact">Contact</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Home/Map">Map</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Tilaus</a>
                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 42px, 0px);">
                            <a class="dropdown-item" href="~/Tuotteet/Index">Tuotteet</a>
                            <a class="dropdown-item" href="~/PostitoimiPaikat/Index">PostitoimiPaikat</a>
                            <a class="dropdown-item" href="~/Asiakkaat/Index">Asiakkaat</a>
                            <a class="dropdown-item" href="~/Henkilot/Index">Henkilot</a>
                            <a class="dropdown-item" href="~/Tilaukset/Index">Tilaukset</a>
                            <a class="dropdown-item" href="~/Tilausrivit/Index">Tilausrivit</a>
                        </div>
                    </li>
                  
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tilaus App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstraplux")
    @RenderSection("scripts", required: false)

</body>
</html>
